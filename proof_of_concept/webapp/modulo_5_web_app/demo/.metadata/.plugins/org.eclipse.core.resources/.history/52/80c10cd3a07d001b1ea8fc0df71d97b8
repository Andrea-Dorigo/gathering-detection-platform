package com.example.demo;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import java.util.List;

@SpringBootApplication
public class MongodbappApplication implements CommandLineRunner {
	
	@Autowired
	private costumerRepository costumerrepository;
	
	public static void main(String[] args) {
		SpringApplication.run(MongodbappApplication.class, args);
	}

	@Override
	public void run(String... args) throws Exception {
		costumer c1 = new costumer("1","emma","roveroni");
		costumer c2 = new costumer("2","gig","rossi");
		costumer c3 = new costumer("3","bianca","verdi");
		costumer c4 = new costumer("4","mario","bianchi");
		costumer c5 = new costumer("5","andrea","cecchin");
		costumerrepository.save(c1);
		costumerrepository.save(c2);
		costumerrepository.save(c3);
		costumerrepository.save(c4);
		costumerrepository.save(c5);
		System.out.println("*****");
		List<costumer> costumers = costumerrepository.findAll();
		for(costumer c:costumers) {
			System.out.println(c.toString());
		}
	}

}
